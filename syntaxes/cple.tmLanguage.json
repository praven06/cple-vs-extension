{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CPLE",
  "scopeName": "source.cple",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#preprocessor" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.cple",
          "match": "\\b(if|else|elif|while|for|do|switch|case|break|continue|return|goto)\\b"
        },
        {
          "name": "keyword.other.cple",
          "match": "\\b(const|static|extern|typedef|sizeof|struct|union|enum)\\b"
        },
        {
          "name": "storage.modifier.cple",
          "match": "\\b(auto|register|volatile|inline)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.cple",
          "match": "\\b(void|char|short|int|long|float|double|signed|unsigned|bool)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.cple",
          "match": "\\b(true|false|null|NULL|TRUE|FALSE)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.cple",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.cple",
              "match": "\\\\(x[0-9A-Fa-f]{2}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
            }
          ]
        },
        {
          "name": "string.quoted.single.cple",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.cple",
              "match": "\\\\(x[0-9A-Fa-f]{2}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.cple",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.cple",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.cple",
          "match": "\\b0[xX][0-9a-fA-F]+(\\.[0-9a-fA-F]+)?([pP][+-]?[0-9]+)?[lLuU]*\\b"
        },
        {
          "name": "constant.numeric.octal.cple",
          "match": "\\b0[0-7]+[lLuU]*\\b"
        },
        {
          "name": "constant.numeric.decimal.cple",
          "match": "\\b[0-9]+(\\.[0-9]+)?([eE][+-]?[0-9]+)?[fFlLuU]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.cple",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.cple",
          "match": "(\\+|\\-|\\*|\\/|\\%|\\+\\+|\\-\\-)"
        },
        {
          "name": "keyword.operator.comparison.cple",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.logical.cple",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.cple",
          "match": "(&|\\||\\^|~|<<|>>)"
        },
        {
          "name": "keyword.operator.assignment.cple",
          "match": "(=|\\+=|\\-=|\\*=|\\/=|%=|&=|\\|=|\\^=|<<=|>>=)"
        }
      ]
    },
    "preprocessor": {
      "patterns": [
        {
          "name": "meta.preprocessor.cple",
          "match": "^\\s*#\\s*(include|define|undef|ifdef|ifndef|if|else|elif|endif|pragma)\\b",
          "captures": {
            "1": { "name": "keyword.control.directive.cple" }
          }
        }
      ]
    }
  }
}
